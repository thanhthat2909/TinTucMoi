@model IEnumerable<HeThongTinTuc.Models.bantin>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div >
        @foreach(var i in Model)
        {
            <div class="rounded m-3 p-3 shadow">
                <h5 class="text-primary">@i.tieude</h5>
                <p class="text-muted">@i.ngaydang</p>
                <div class="row">
                    <div class="col-sm-4">
                        <img src="~/images/@i.hinhanh" class="img-thumbnail" />
                    </div>
                    <div class="col">
                        <p class="text-justify">@i.tomtat</p>
                        <p class="text-end"><a asp-action="Details" asp-route-id="@i.bantinid">Chi tiết</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

